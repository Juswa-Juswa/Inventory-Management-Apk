<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".dashboard">



    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/home"/>

    <!-- Dashboard Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:layout_marginTop="45dp"
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DASHBOARD"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"/>
    </RelativeLayout>


    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Search"
            android:textSize="16sp"
            android:paddingStart="8dp"
            android:background="@drawable/rounded_border" />

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/pencil"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:id="@+id/add_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/plus"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/trash"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Table Header -->
    <LinearLayout
        android:id="@+id/table_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:layout_marginTop="16dp"
        android:background="@drawable/backgroundgradient"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SHIPMENT ID"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PRODUCT_ID"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="STATUS"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SHIPPED"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DELIVERY"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Table Content -->
    <ScrollView
        android:id="@+id/table_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/table_header"
        android:layout_weight="1"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="mark"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="######"
                    android:textColor="#2C2727"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PENDING"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6/1/2024"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6/3/2024"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>
            </LinearLayout>
            <!-- Repeat rows as necessary -->
        </LinearLayout>
    </ScrollView>

    <!-- Footer Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/backgroundgradient"
        android:padding="15dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/footer_dashboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dashboardnav"
            android:contentDescription="Dashboard"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/footer_inventory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/inventorynav"
            android:contentDescription="Inventory"
            android:padding="0dp"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/footer_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/rportnav"
            android:contentDescription="Report"
            android:padding="0dp"/>
    </LinearLayout>

</RelativeLayout>
